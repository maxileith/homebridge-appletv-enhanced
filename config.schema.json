            "description": "Settings that apply to all Apple TVs except if they are overwritten in the device specific overrides.",
            "items": [
                "mediaTypes",
                "deviceStates",
                "deviceStateDelay",
                "remoteKeysAsSwitch",
                {
                    "key": "customInputURIs",
                    "type": "array",
                    "items": {
                        "key": "customInputURIs[]"
                    }
                },
                "avadaKedavraAppAmount",
                "disableVolumeControlRemote",
                "absoluteVolumeControl",
                "setTopBox"
            ]
        },
