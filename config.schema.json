            "expandable": true,
            "expanded": false,
            "title": "Device Specific Overrides",
            "description": "Override the default settings for specific devices.",
            "items": [
                {
                    "type": "tabarray",
                    "key": "deviceSpecificOverrides",
                    "title": "{{ value.mac || 'Override' }}",
